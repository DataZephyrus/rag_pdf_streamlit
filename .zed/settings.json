{
  "buffer_font_family": "American Typewriter",
  "buffer_font_size": 16,
  "buffer_line_height": "comfortable",
  "tab_size": 4,
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 100,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "theme": {
    "mode": "dark",
    "dark": "Gruvbox Dark Hard",
    "light": "Gruvbox Light Hard"
  },
  "icon_theme": {
    "mode": "dark",
    "dark": "Zed (Default)",
    "light": "Zed (Default)"
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "language_servers": ["ruff", "pyright"],
      "tab_size": 4,
      "hard_tabs": false
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "configuration": "ruff.toml"
        }
      }
    },
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "inactive_opacity": 0.85,
  "auto_install_extensions": {
    "ruff": true,
    "vscode-icons": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1500
    }
  },
  "current_line_highlight": "all",
  "cursor_blink": false,
  "cursor_shape": "block",
  "cursors": true,
  "git_diff": true,
  "search_results": true,
  "use_autoclose": true,
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "enable_preview_from_file_finder": false,
  "enable_preview_from_code_navigation": true,
  "modal_max_width": "small",
  "remove_trailing_whitespace_on_save": true,
  "terminal": {
    "alternate_scroll": "on",
    "blinking": "on",
    "copy_on_select": false,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "env": {},
    "font_family": "Zed Plex Mono",
    "font_features": null,
    "font_size": 16,
    "line_height": "comfortable",
    "option_as_meta": false,
    "button": false,
    "shell": "system",
    "toolbar": {
      "breadcrumbs": true
    },
    "working_directory": "current_project_directory",
    "scrollbar": {
      "show": null
    }
  },
  "assistant": {
    "enabled": true,
    "button": false,
    "dock": "right",
    "default_width": 480,
    "default_height": 320,
    "version": "1"
  },

  "outline_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": null
    }
  }
}
